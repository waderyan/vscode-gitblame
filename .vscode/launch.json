{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/out/src/**/*.js"
			],
			"preLaunchTask": "npm: test-build"
		},
		{
			"name": "Test Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceRoot}",
				"--extensionTestsPath=${workspaceRoot}/out/test/suite"
			],
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/out/src/**/*.js"
			],
			"preLaunchTask": "npm: pretest"
		}
	]
}
